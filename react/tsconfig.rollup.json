{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "types",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "noImplicitAny": false,
    "types": [],
    "lib": ["es2017", "dom"]
  },
  "exclude": [
    "node_modules",
    "src/**/*.spec.tsx",
    "src/**/*.spec.ts"
  ]
}